<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "Happy Kid", root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "Trang Chủ", root_path %></li>
        <li><%= link_to "Trợ Giúp", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "Người Dùng", users_path %></li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              Tài Khoản <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Hồ Sơ", current_user %></li>
              <li><%= link_to "Cài Đặt", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Đăng Xuất", logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Đăng Nhập", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>